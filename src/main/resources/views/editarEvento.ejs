<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Editar Evento</title>
  <link rel="stylesheet" href="/css/editar.css">
</head>
<body>
  <form id="editar-evento" method="POST">
    <h2>Editar Evento</h2>

    <!-- Campo Nombre del Evento (solo lectura) -->
    <div class="nombre">
      <label>Nombre del Evento:</label>
      <input type="text" id="nombre" required autocomplete="off">
    </div>

    <!-- Campo Fecha editable -->
    <div class="fecha">
      <label>Fecha:</label>
      <input type="date" id="fecha" required autocomplete="off">
    </div>

    <!-- Contenedor dinámico de precios -->
    <div id="precios-contenedor"></div>

    <!-- Botón de envío -->
    <button type="submit">Guardar Cambios</button>
  </form>

  <script>
    window.eventoData = {
      idEvento: "<%= idEvento %>",
      nombreEvento: "<%= nombreEvento %>",
      fechaEvento: "<%= fechaEvento.toISOString().split('T')[0] %>",
      precios: <%- JSON.stringify(precios) %>,
      tipoEvento: "<%= tipoEvento %>",
    };
  </script>

  <script src="/js/editarEvento.js"></script>
</body>
</html>
